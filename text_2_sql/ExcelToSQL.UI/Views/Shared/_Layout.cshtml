<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Text-to-SQL Query</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    
    <!-- Dropzone CSS -->
    <link rel="stylesheet" href="https://unpkg.com/dropzone@5/dist/min/dropzone.min.css">
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow">
            <div class="container-fluid px-4">
                <div class="d-flex align-items-center">
                    <img src="~/images/logos/microsoft-logo.png" alt="Microsoft" height="24" class="me-3">
                    <span class="navbar-brand">Text-to-SQL Query</span>
                </div>
                <div class="d-flex align-items-center">
                    <a href="@Url.Action("Index", "Query")" class="nav-link me-3">Chat</a>
                    <a href="@Url.Action("UploadData", "Admin")" class="nav-link me-3">.xlsx Upload</a>
                    <div class="user-avatar">MN</div>
                </div>
            </div>
        </nav>
    </header>

    <div class="main-content">
        <div class="container-fluid px-4 py-3">
            @RenderBody()
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/dropzone@5/dist/min/dropzone.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
